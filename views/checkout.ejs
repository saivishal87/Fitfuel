<%- include('./partials/header') %>

<div class="max-w-4xl mx-auto px-20 py-10">
  <h2 class="text-2xl font-semibold mb-5">Order Summary</h2>
  
  <div class="bg-white p-5 rounded shadow-lg">
    <h3 class="text-xl font-semibold mb-3">Order Details</h3>
    <p><strong>Order ID:</strong> <%= order._id %></p>
    <p><strong>Order Date:</strong> <%= new Date(order.orderDate).toLocaleDateString() %></p>
    <p><strong>Status:</strong> <%= order.status %></p>
    
    <div class="mt-5">
      <h3 class="text-lg font-semibold mb-2">Items Ordered</h3>
      <ul class="divide-y divide-gray-200">
        <% order.items.forEach(function(item) { %>
          <li class="flex justify-between py-3">
            <span><%= item._id.name %> (x<%= item.quantity %>)</span>
            <span>₹ <%= item.total %></span>
          </li>
        <% }) %>
      </ul>
    </div>
    
    <div class="flex justify-between mt-5 pt-5 border-t border-gray-200">
      <h3 class="text-xl font-semibold">Total Amount</h3>
      <h3 class="text-xl font-semibold text-green-600">₹ <%= order.totalAmount %></h3>
    </div>
  </div>

  <div class="mt-10">
    <a href="/shop" class="px-5 py-2 bg-blue-500 text-white rounded">Continue Shopping</a>
  </div>
</div>

<%- include('./partials/footer') %>